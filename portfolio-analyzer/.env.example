# Portfolio Analyzer - Environment Configuration
# Copie este arquivo para .env e preencha com suas configurações

# ==========================================
# API Keys (Opcional)
# ==========================================
# Yahoo Finance é usado por padrão e não requer chave
# Descomente se quiser usar serviços premium

# Alpha Vantage (dados financeiros premium)
# ALPHA_VANTAGE_KEY=your_key_here
# https://www.alphavantage.co/support/#api-key

# Polygon.io (dados de mercado em tempo real)
# POLYGON_API_KEY=your_key_here
# https://polygon.io/

# ==========================================
# Cache Settings
# ==========================================
CACHE_ENABLED=true
CACHE_TTL=3600  # Time to live em segundos (1 hora)
CACHE_DIR=data/cache

# ==========================================
# Logging
# ==========================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/portfolio_analyzer.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ==========================================
# Database (Opcional - para persistência)
# ==========================================
# DATABASE_URL=sqlite:///data/portfolio.db
# DATABASE_URL=postgresql://user:password@localhost/portfolio_db

# ==========================================
# API Settings
# ==========================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true  # Auto-reload em desenvolvimento
API_WORKERS=1

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# ==========================================
# Analysis Settings
# ==========================================
DEFAULT_PERIOD=1y
DEFAULT_RISK_FREE_RATE=0.02  # 2% taxa livre de risco
DEFAULT_BENCHMARK=^GSPC  # S&P 500

# ==========================================
# Notifications (Opcional)
# ==========================================
# Email
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Telegram
# TELEGRAM_BOT_TOKEN=your-bot-token
# TELEGRAM_CHAT_ID=your-chat-id

# ==========================================
# Feature Flags
# ==========================================
ENABLE_DASHBOARD=true
ENABLE_PDF_REPORTS=true
ENABLE_NOTIFICATIONS=false
ENABLE_BACKTESTING=true

# ==========================================
# Performance
# ==========================================
MAX_STOCKS_PER_PORTFOLIO=100
MAX_PORTFOLIOS_PER_USER=10
RATE_LIMIT_PER_MINUTE=60

# ==========================================
# Development
# ==========================================
DEBUG=false
TESTING=false
PROFILING=false
